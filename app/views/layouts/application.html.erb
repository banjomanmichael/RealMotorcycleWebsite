<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <!--<script src="//"-->
  </head>
  
  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav>
          <ul>
            <li><a href="home.html.erb">Home</a></li>
            
            <li class="dropdown">
            <a href="street.html.erb" class="dropbtn">Street</a>
            <div class="dropdown-content">
              <a href="sport.html.erb" class="dropdownseparator">Sport</a>
              <a href="sporttouring.html.erb" class="dropdownseparator">Sport touring</a>
              <a href="supersport.html.erb" class="dropdownseparator">Supersport</a>
              <a href="cruiser.html.erb" class="dropdownseparator">Cruiser</a>
            </div>
            </li>
            
            <li class="dropdown">
            <a href="offroad.html.erb" class="dropbtn">Off-road</a>
            <div class="dropdown-content">
              <a href="motocross.html.erb" class="dropdownseparator">Motocross</a>
              <a href="trailbike.html.erb" class="dropdownseparator">Trail bike</a>
              <a href="dualsport.html.erb" class="dropdownseparator">Dual-sport</a>
            </div>
            </li>
            
            <li class="dropdown">
            <a href="ridinggear.html.erb" class="dropbtn">Riding Gear</a>
            <div class="dropdown-content">
              <a href="helmets.html.erb" class="dropdownseparator">Helmets</a>
              <a href="jerseysets.html.erb" class="dropdownseparator">Jersey sets</a>
              <a href="goggles.html.erb" class="dropdownseparator">Goggles</a>
              <a href="gloves.html.erb" class="dropdownseparator">Gloves</a>
              <a href="boots.html.erb" class="dropdownseparator">Boots</a>
            </div>
            </li>
            
            <li><a href="about.html.erb">Contact us</a></li>

            <% if logged_in? %>
              <li class="dropdown">
              <a href="new.html.erb" class="dropbtn">My Account</a>
              <div class="dropdown-content">
                <a <%= link_to "Profile", current_user, class: "dropdownseparator" %></a>
                <a <%= link_to "Settings", edit_user_path(current_user), class: "dropdownseparator" %></a>
                <a <%= link_to "Log out", logout_path, method: "delete", class: "dropdownseparator" %></a>
              </div>
              </li>
            <% else %>
              <li><i><%= link_to "Log in", login_path, class: "loginbutton" %></i></li>
            <% end %>
            
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
      <!--<%= debug(params) if Rails.env.development? %>-->
    </div>
  </body>
</html>
