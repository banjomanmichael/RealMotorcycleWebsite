<% provide(:title, "Log in") %>
<h1>Log in</h1>

<style>
    body {
        background-image: url('<%= asset_path 'HomePage.jpg' %>');
        background-size: 1350px 844px;
        background-color: black;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
    
    p {
      margin-top: -55px;
      margin-left: 120px;
    }
    
    .p1 {
      margin-top: -55px;
      margin-left: 120px;
    }
</style>

<div class="row">
  <div class="col-md-6 col-md-offset-3" style="padding-right:900px; padding-left: 60px;">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <p>Remember me</p>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p1>New user? <%= link_to "Sign up now!", signup_path %></p1>
  </div>
</div>