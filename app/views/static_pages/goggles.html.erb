<% provide(:title, "Goggles") %>

<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="app/assets/stylesheets/HouseOfThunderStyle.css">
  </head>
    
  <style>
    h5 {
      font-family: Verdana, Sans-serif;
      color: black;
      text-align: left;
      margin-left: 50px;
      text-shadow: none;
      font-size: 18px;
    }
    
    button {
      padding: 12px 29px;
      margin-top: 10px;
      margin-left: 130px;
      box-shadow: none;
    }
  </style>
    
  <body>

  <div style="background-color:white;color:black;padding-top:0px;padding-right:236.5px; margin: -8px; margin-top: -22px;">
     
    <h1 style= "text-shadow: none; padding: 15px; color: black;">
      <i>Goggles Selection</i>
    </h1>
    
    <h5 id="total"> Total: </h5> 
   
    <script>
      var price;
    </script>
   
    <div id="content">
      <div class="bikes">
         <table style="width:270%", "margin-left: 100px; padding-top: -100;">
          <tr>
            <td><%=image_tag("Riding Gear/Goggles/Goggles_Fox_Black.jpg", :size => "400x207")%></td>
            <td><h5>Fox, Black</h5><h5> Price: $49.99</h5></td>
            <td><a><button type="button" onclick="displayTotal()">Add to cart</button></a></td>
          </tr>
          <tr>
            <td><%=image_tag("Riding Gear/Goggles/Goggles_Fox_Blueandwhite.jpg", :size => "400x207")%></td>
            <td><h5>Fox, Blue and white</h5><h5> Price: $49.99</h5></td>
            <td><a><button type="button" onclick="displayTotal()">Add to cart</button></a></td>
          </tr>
